<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
              version="2.1">
    <application>
        <message-bundle>com.sun.faces.test.servlet30.el.MessageBundle</message-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>fr</supported-locale>
        </locale-config>
        <system-event-listener>
            <system-event-listener-class>com.sun.faces.test.servlet30.el.ViewInitFacesListener</system-event-listener-class>
            <system-event-class>jakarta.faces.event.PreRenderComponentEvent</system-event-class>
        </system-event-listener>
    </application>    
    <managed-bean>
        <description>This is a description</description>
        <managed-bean-name>description</managed-bean-name>
        <managed-bean-class>java.util.Date</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
